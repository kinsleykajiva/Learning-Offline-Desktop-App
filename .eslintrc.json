{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true ,
        "es6": true ,
        "jquery": true 
        
    } ,
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    } ,
    "rules": {
        "consistent-return": 2,       
        "no-else-return"   : 1,
        "semi"             : [1, "always"],
        "space-unary-ops"  : 2 ,
        "allowArrowFunctions": true ,
        "no-console" :"error" ,        
        "no-empty":"error" ,
        "no-extra-semi":"error",
        "curly":"error" ,
        "no-alert":"error" ,
        "eqeqeq":"error" ,
        "no-useless-call":"error",       
        "brace-space":"warning" ,
        "brace-style":"error" ,"one-var":"off" ,
        "no-var":"error",
        "prefer-arrow-callback":"error" ,
        "prefer-const":"warn"
    }
}